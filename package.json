{
  "name": "testring-build",
  "version": "0.1.0",
  "author": "RingCentral",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ringcentral/testring.git"
  },
  "scripts": {
    "postinstall": "lerna bootstrap && npm run link",
    "link": "lerna exec --no-sort -- node ../../bin/link",
    "unlink": "lerna exec --no-sort -- node ../../bin/unlink",
    "lint:src": "lerna exec --ignore=@testring/e2e-test-app --parallel --no-sort -- eslint --ext .ts ./src/**/*",
    "lint:test": "lerna exec --parallel --no-sort -- eslint ./test/**/*.ts",
    "test": "lerna exec -- mocha --opts mocha.opts",
    "test:watch": "lerna exec --parallel -- mocha --opts mocha.opts --watch",
    "test:e2e": "lerna run --stream --scope @testring/e2e-test-app e2e",
    "test:e2e-simple": "lerna run --stream --scope @testring/e2e-test-app e2e-simple",
    "test:coverage": "nyc npm test",
    "test:publish": "coveralls < ./coverage/lcov.info && rimraf ./coverage -G",
    "cleanup": "lerna clean --yes && lerna exec --parallel -- rimraf ./dist -G && npm run unlink && rimraf ./node_modules",
    "build": "lerna exec -- tsc --target es2015 && npm run build:recorder",
    "build:recorder": "lerna run --stream --scope @testring/recorder-frontend build",
    "build:watch": "lerna exec --parallel -- tsc --target es2015 --watch",
    "build:clear": "npm run lint:src && npm run lint:test && npm run build",
    "build:precommit": "npm run build:clear && npm run test && npm run test:e2e-simple",
    "build:ci": "npm run build:clear && npm run test:coverage && npm run test:e2e",
    "publish": "lerna publish --skip-npm",
    "check-deps": "lerna exec -- npm-check --skip-unused --ignore @testring/*"
  },
  "precommit": "build:precommit",
  "nyc": {
    "all": true,
    "check-coverage": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 45,
    "sourceMap": true,
    "include": [
      "packages/*/src/*.ts",
      "packages/*/src/**/*.ts"
    ],
    "exclude": [
      "packages/*/src/index.ts",
      "packages/testring-types",
      "packages/testring-web-application/src/web-application.ts",
      "packages/testring-web-application/src/web-client.ts",
      "packages/testring-plugin-selenium-driver/src/plugin/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/mocha": "5.2.4",
    "@types/node": "10.5.2",
    "babel-eslint": "8.2.5",
    "chai": "4.1.2",
    "coveralls": "3.0.2",
    "eslint": "5.0.1",
    "eslint-config-ringcentral": "0.3.0",
    "eslint-plugin-react": "7.9.1",
    "eslint-plugin-typescript": "0.12.0",
    "fs-extra": "6.0.1",
    "lerna": "2.11.0",
    "mocha": "5.2.0",
    "npm-check": "5.7.1",
    "nyc": "12.0.2",
    "pre-commit": "1.2.2",
    "rimraf": "2.6.2",
    "sinon": "6.1.2",
    "ts-node": "7.0.0",
    "typescript": "2.9.2",
    "typescript-eslint-parser": "16.0.1"
  }
}
